{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++", // CAMBIATO: Usa il comando di sistema
            "args": [
                "-fdiagnostics-color=always",
                "-g",              // Importante per il debugging
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}" // CAMBIATO: Rimosso .exe e usato slash Linux
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generata per l'ambiente Linux Fedora."
        }
    ]
}