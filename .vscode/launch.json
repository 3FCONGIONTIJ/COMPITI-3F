{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Avvia",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}", // Esegue il file compilato
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false, // Cambia in true se vuoi input/output in una finestra separata
            "MIMode": "gdb",           // Indica di usare GDB
            "setupCommands": [
                {
                    "description": "Abilita la pretty-printing per gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file" // Assicurati che il nome corrisponda al 'label' nel tasks.json
        }
    ]
}